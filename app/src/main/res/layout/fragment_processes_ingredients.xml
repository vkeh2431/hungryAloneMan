<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_processes_ingredients"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".process.fragment_processes_ingredients">

    <CheckBox
        android:id="@+id/배추김치"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배추김치"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/두부"
        app:layout_constraintBottom_toTopOf="@id/삼겹살"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple" />

    <CheckBox
        android:id="@+id/두부"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두부"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/배추김치"
        app:layout_constraintBottom_toTopOf="@id/계란"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

    <CheckBox
        android:id="@+id/삼겹살"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삼겹살"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/배추김치"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/계란"
        app:layout_constraintBottom_toTopOf="@id/대파"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

    <CheckBox
        android:id="@+id/계란"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계란"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/두부"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/삼겹살"
        app:layout_constraintBottom_toTopOf="@id/감자"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

    <CheckBox
        android:id="@+id/대파"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대파"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/삼겹살"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/감자"
        app:layout_constraintBottom_toBottomOf="parent"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

    <CheckBox
        android:id="@+id/감자"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감자"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@id/계란"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/대파"
        app:layout_constraintBottom_toBottomOf="parent"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"/>

</androidx.constraintlayout.widget.ConstraintLayout>